<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="523.0" prefWidth="850.0" style="-fx-background-color: e4eefc; -fx-padding: 10px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">

    <TableView fx:id="studentTable" prefHeight="471.0" prefWidth="846.0" style="-fx-background-color: white; -fx-border-color: #cccccc;                        -fx-border-radius: 10px; -fx-border-width: 2px;">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="100" style="-fx-alignment: CENTER;" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="studentID" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="nameColumn" prefWidth="150" style="-fx-alignment: CENTER;" text="NAME">
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="genderColumn" prefWidth="80" style="-fx-alignment: CENTER;" text="GENDER">
                <cellValueFactory>
                    <PropertyValueFactory property="gender" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="ageColumn" prefWidth="50.0" style="-fx-alignment: CENTER;" text="AGE">
                <cellValueFactory>
                    <PropertyValueFactory property="age" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="majorColumn" prefWidth="120.0" style="-fx-alignment: CENTER;" text="MAJOR">
                <cellValueFactory>
                    <PropertyValueFactory property="major" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="emailColumn" prefWidth="180.0" style="-fx-alignment: CENTER;" text="EMAIL">
                <cellValueFactory>
                    <PropertyValueFactory property="studentEmail" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="startYearColumn" prefWidth="80" style="-fx-alignment: CENTER;" text="START YEAR">
                <cellValueFactory>
                    <PropertyValueFactory property="startYear" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="endYearColumn" prefWidth="80" style="-fx-alignment: CENTER;" text="END YEAR">
                <cellValueFactory>
                    <PropertyValueFactory property="endYear" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Button fx:id="backButton" layoutX="14.0" layoutY="488.0" mnemonicParsing="false" onAction="#back" prefHeight="25.0" prefWidth="107.0" style="-fx-background-color: #c7defa;" text="Back" textFill="WHITE">
      <font>
         <Font name="Arial Bold" size="12.0" />
      </font></Button>
</AnchorPane>
