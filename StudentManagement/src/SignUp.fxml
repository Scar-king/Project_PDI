<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to right, #e4eefc, #c7defa);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SignUPController">
   <children>
      <Label layoutX="256.0" layoutY="37.0" text="Sign Up">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
      
      <Label layoutX="100.0" layoutY="100.0" text="Username">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" layoutX="200.0" layoutY="95.0" prefHeight="30.0" prefWidth="250.0" promptText="Username" />

      <Label layoutX="100.0" layoutY="150.0" text="Email">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="emailField" layoutX="200.0" layoutY="145.0" prefHeight="30.0" prefWidth="250.0" promptText="Email" />

      <Label layoutX="100.0" layoutY="200.0" text="Password">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="195.0" prefHeight="30.0" prefWidth="250.0" promptText="Password" />

      <Button fx:id="signUpButton" layoutX="99.0" layoutY="264.0" mnemonicParsing="false" onAction="#signUp" prefHeight="40.0" prefWidth="400.0" style="-fx-background-color: #1969f4; -fx-text-fill: white; -fx-background-radius: 20;" text="Sign Up" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font>
      </Button>

      <Label layoutX="188.0" layoutY="321.0" text="Already have an account?">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Button layoutX="325.0" layoutY="315.0" mnemonicParsing="false" onAction="#goToLogin" prefHeight="30.0" prefWidth="47.0" 
        style="-fx-background-color: transparent; -fx-text-fill: #255bb3; -fx-font-size: 12; -fx-underline: true;">
         Login
      </Button>

   </children>
</AnchorPane>
